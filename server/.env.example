# ── Server ─────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=5000

# ── MongoDB ────────────────────────────────────────────────────────────────
# Replace with your Atlas connection string or local URI
MONGO_URI=mongodb://localhost:27017/rentspace

# ── JWT ────────────────────────────────────────────────────────────────────
# Generate strong random secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your_access_token_secret_here_replace_me
JWT_REFRESH_SECRET=your_refresh_token_secret_here_replace_me
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# ── Client ─────────────────────────────────────────────────────────────────
CLIENT_URL=http://localhost:5173

# ── Cloudinary (image uploads) ─────────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ── Stripe (payment-ready) ─────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ── Email (Nodemailer) ──────────────────────────────────────────────────────
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM="RentSpace <noreply@rentspace.com>"
